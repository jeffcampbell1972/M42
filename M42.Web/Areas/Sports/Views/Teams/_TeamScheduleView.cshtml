@model TeamViewModel


<ul id="regularSeason" style="list-style-type: none; margin: 0; padding: 0;">
    @foreach(var teamGame in Model.Team.RegularSeason)
    {
    <li>
        <div style="float:left; width:100px">@teamGame.HomeAwayIndicator</div>
        <div style="float:left; width:100px">
            <a asp-area="Sports" asp-controller="Teams" asp-action="Details" asp-route-id="@teamGame.Opponent.Id">@teamGame.Opponent.Name</a>
        </div>
        <div style="float:left; width:100px">@teamGame.WinLossIndicator</div>
        <div style="float:left; width:100px">@teamGame.Score</div>
        <div style="clear:both"></div>
    </li>
    }
</ul>